@model AgileTask.Domain.ViewModels.VacationDayViewModel

@{
    ViewData["Title"] = "AddNewVacationDay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>New Vacation Day</h1>
<hr />

<div class="content-wrapper">
    <div class=" flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-body">
                        <form asp-action="AddNewVacationDay">
                            <div class="mb-3">
                                <label asp-for="NumberOfDays" class="control-label"></label>
                                <input asp-for="NumberOfDays" class="form-control" />
                                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Note" class="control-label"></label>
                                <input asp-for="Note" class="form-control" />
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="control-label">Position</label>
                                <select class="form-select" id="exampleFormControlSelect1"  asp-for="PositionId" asp-items="(IEnumerable<SelectListItem>)@ViewData["Positions"]"style=" width:100%"></select>
                                <span asp-validation-for="PositionId" class="text-danger"></span>
                            </div>
                            <button type="submit" value="Create" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="content-backdrop fade"></div>
</div>


