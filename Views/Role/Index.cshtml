@model IEnumerable<AgileTask.Domain.ViewModels.RoleViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-secondary" asp-action="CreateRole">Create New</a>
</p>
<table class="table">
